{
  "name": "studio-vn21-transcript-editor",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.ts",
  "author": "Studio VN21",
  "description": "Studio VN21 helper tool for syncing audio with transcripts",
  "homepage": "./",
  "dependencies": {
    "@johnfanidis/usekeypress": "^1.0.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.57",
    "@types/parse": "^3.0.1",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "bootstrap": "^5.2.1",
    "electron-is": "^3.0.0",
    "parse": "3.5.1-alpha.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^5.3.6",
    "typescript": "^4.8.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "set PORT=3001 && react-scripts start",
    "build": "PUBLIC_URL=/ react-scripts build",
    "build-electron": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently \"yarn start\" \"wait-on http://localhost:3001 && electron .\"",
    "electron:build": "yarn build-electron && electron-builder build --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.studiovn21.transcript-editor",
    "productName": "Studio VN21 Transcript Editor",
    "files": [
      "build/**/*",
      "electron/main.ts",
      "package.json"
    ],
    "extends": null
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "history": "^5.3.0",
    "wait-on": "^6.0.1"
  }
}
